{
    "manifest_version": 3,
    "name": "Focus Mode",
    "description": "Enable focus mode on Chrome's official Extensions and Chrome Web Store documentation.",
    "version": "1.0",
    "background": {
        "service_worker": "content.js"
    },
    "icons": {
        "16": "images/icon-16.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}