{
    "name": "S.A.K",
    "description": "Swiss Army Knife : Keep track of what you have to do on website when you don't have the time to do it.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./images/icon-16.png"
    },
    "background": {
        "service_worker": "./scripts/background.js"
    },
    "permissions": [
        "tabs", "storage"
    ]
}